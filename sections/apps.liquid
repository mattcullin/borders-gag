<div
  {% unless section.settings.remove_padding %} class="gutter--grid-padding gutter-top--large" {% endunless %}
>
  {%- liquid
    for block in section.blocks
      render block
    endfor
    render 'color-scheme', color_scheme: blank, hide_section_bottom_border: section.settings.disable_section_bottom_border
  -%}
</div>

{% schema %}
{
  "name": "t:sections.apps.name",
  "class": "element--has-section-borders mount-app",
  "settings": [
    {
      "type": "header",
      "content": "t:raw-extra-words.settings_schema.colors.header_section"
    },
    {
      "type": "checkbox",
      "id": "remove_padding",
      "label": "t:raw-extra-words.settings_schema.borders.remove.padding",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "disable_section_bottom_border",
      "label": "t:raw-extra-words.settings_schema.borders.remove.hide_section_bottom_border",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.name"
    }
  ],
  "disabled_on": {
    "groups": ["custom.drawers", "custom.overlay"]
  }
}
{% endschema %}