{%- if paginate.pages > 1 -%}
  <nav role="navigation">
    <div class="pagination">
      {%- if paginate.previous -%}
        <a class="pagination__prev go go--prev" href="{{ paginate.previous.url }}">
          <span class="visually-hidden">{{ 'general.accessibility_labels.previous' | t }}</span> {% render 'theme-symbols' icon: 'arrow' %}
        </a>
      {%- else -%}
        <div class="pagination__prev go go--prev disabled">
          <span class="visually-hidden">{{ 'general.accessibility_labels.previous' | t }}</span> {% render 'theme-symbols' icon: 'arrow' %}
        </div>
      {%- endif -%}

      {% comment %} {%- for part in paginate.parts -%}
        {%- if part.is_link -%}
          <div class="lap-hide">
            <a href="{{ part.url }}">
              <span class="visually-hidden">page</span> {{ part.title }}
            </a>
          </div>
        {%- else -%}
          {%- if part.title == paginate.current_page -%}
            <div class="lap-hide active" aria-current="page">
              <span class="visually-hidden">page</span> {{ part.title }}
            </div>
          {%- else -%}
            <div class="lap-hide">
              <span class="visually-hidden">page</span> {{ part.title }}
            </div>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%} {% endcomment %}

      <div class="pagination__from-to">
        {{ paginate.current_page }} <span class="pagination__line">-</span> {{ paginate.pages }}
      </div>

      {%- if paginate.next -%}
        <a class="pagination__prev go go--next" href="{{ paginate.next.url }}">
          <span class="visually-hidden">{{ 'general.accessibility_labels.previous' | t }}</span> {% render 'theme-symbols' icon: 'arrow' %}
        </a>
      {%- else -%}
        <div class="pagination__next go go--next disabled">
          <span class="visually-hidden">{{ 'general.accessibility_labels.next' | t }}</span> {% render 'theme-symbols' icon: 'arrow' %}
        </div>
      {%- endif -%}
    </div>
  </nav>
{%- endif -%}